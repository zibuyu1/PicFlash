.profile {
  min-height: 100vh;
  background-color: #FAFAF9;
}

.profile-header {
  background: linear-gradient(135deg, #7E22CE 0%, #9333EA 100%);
  padding: 40rpx 20rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(126, 34, 206, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 40rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.user-id {
  display: block;
  font-size: 14rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 12rpx 32rpx;
  font-size: 16rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.login-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.login-btn:active {
  transform: scale(0.95);
}

.stats-section {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(126, 34, 206, 0.1);
  border: 1rpx solid rgba(126, 34, 206, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #9333EA;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 14rpx;
  color: #44403C;
  display: block;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(126, 34, 206, 0.2);
}

.menu-section {
  background: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(126, 34, 206, 0.1);
  border: 1rpx solid rgba(126, 34, 206, 0.2);
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(126, 34, 206, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:hover {
  background: rgba(126, 34, 206, 0.05);
}

.menu-item:active {
  background: rgba(126, 34, 206, 0.1);
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.menu-title {
  font-size: 16rpx;
  color: #1C1917;
  font-weight: 500;
}

.menu-arrow {
  font-size: 24rpx;
  color: rgba(126, 34, 206, 0.4);
  font-weight: 300;
}

.version-section {
  text-align: center;
  padding: 30rpx 20rpx;
}

.version-text {
  font-size: 14rpx;
  color: #A8A29E;
  display: block;
}

