.home {
  min-height: 100vh;
  background-color: var(--background);
  position: relative;
  overflow: hidden;
}

.home::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 20%, rgba(236, 72, 153, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 40% 80%, rgba(34, 197, 94, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.home-header {
  background: linear-gradient(135deg, var(--surface) 0%, var(--surface-light) 100%);
  padding: 60rpx 20rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.2);
  border-bottom: 1rpx solid var(--border);
  position: relative;
  z-index: 1;
}

.home-title {
  font-family: 'Fredoka', sans-serif;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 12rpx;
  display: block;
  text-shadow: var(--neon-glow);
  letter-spacing: -1rpx;
}

.home-subtitle {
  font-size: 20rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  display: block;
  font-weight: 500;
  opacity: 0.9;
}

.home-content {
  padding: 32rpx 20rpx;
  position: relative;
  z-index: 1;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.feature-card {
  background: rgba(26, 26, 46, 0.95);
  border: 1rpx solid rgba(99, 102, 241, 0.3);
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
  transition: left 0.5s ease;
}

.feature-card:hover::before {
  left: 100%;
}

.feature-card:hover {
  transform: translateY(-8rpx);
  box-shadow: var(--neon-glow), 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
  border-color: var(--primary);
}

.feature-card:active {
  transform: translateY(-2rpx);
}

.feature-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
  display: block;
  filter: drop-shadow(0 0 10rpx currentColor);
}

.feature-title {
  font-family: 'Fredoka', sans-serif;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.1);
}

.feature-desc {
  font-size: 14rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  font-weight: 500;
  opacity: 0.8;
}

