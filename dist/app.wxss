page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: var(--background);
  color: var(--text);
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-size: 18rpx;
}

:root {
  --primary: #8B5CF6;
  --primary-light: #A78BFA;
  --secondary: #60A5FA;
  --cta: #8B5CF6;
  --background: #FFFFFF;
  --surface: #F9FAFB;
  --surface-light: #F3F4F6;
  --text: #1F2937;
  --text-secondary: #6B7280;
  --border: #E5E7EB;
  --success: #10B981;
  --warning: #F59E0B;
  --error: #EF4444;
  --neon-glow: 0 0 10rpx rgba(139, 92, 246, 0.3), 0 0 20rpx rgba(139, 92, 246, 0.1);
  --scanline: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.05) 50%);
}

/* 基础样式重置 */

page, view, text, image, navigator, button, input, form, scroll-view {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-size: inherit;
}

/* 霓虹文本效果 */

.neon-text {
  text-shadow: 0 0 5rpx var(--primary), 0 0 10rpx var(--primary), 0 0 20rpx var(--primary);
}

/* 霓虹边框效果 */

.neon-border {
  border: 1rpx solid var(--primary);
  box-shadow: var(--neon-glow);
}

/* 玻璃态效�?*/

.glass-card {
  background: rgba(26, 26, 46, 0.95);
  border: 1rpx solid rgba(99, 102, 241, 0.3);
  border-radius: 16rpx;
}

/* 悬停效果 */

.hover-lift {
  transition: all 0.3s ease;
}

.hover-lift:hover {
  transform: translateY(-5rpx);
  box-shadow: var(--neon-glow);
}

/* 扫描线效�?*/

.scanline {
  position: relative;
  overflow: hidden;
}

.scanline::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--scanline);
  background-size: 100% 4rpx;
  pointer-events: none;
  animation: scan 8s linear infinite;
}

@keyframes scan {
  0% {
    transform: translateY(-100%);
  }
  100% {
    transform: translateY(100%);
  }
}

/* 故障效果 */

.glitch {
  position: relative;
}

.glitch::before,
.glitch::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.glitch::before {
  left: 2rpx;
  text-shadow: -1rpx 0 var(--error);
  clip: rect(24rpx, 550rpx, 90rpx, 0);
  animation: glitch-anim 5s infinite linear alternate-reverse;
}

.glitch::after {
  left: -2rpx;
  text-shadow: 1rpx 0 var(--primary);
  clip: rect(85rpx, 550rpx, 140rpx, 0);
  animation: glitch-anim2 3s infinite linear alternate-reverse;
}

@keyframes glitch-anim {
  0% { clip: rect(13rpx, 9999rpx, 74rpx, 0); }
  20% { clip: rect(40rpx, 9999rpx, 63rpx, 0); }
  40% { clip: rect(67rpx, 9999rpx, 9rpx, 0); }
  60% { clip: rect(27rpx, 9999rpx, 30rpx, 0); }
  80% { clip: rect(78rpx, 9999rpx, 21rpx, 0); }
  100% { clip: rect(44rpx, 9999rpx, 7rpx, 0); }
}

@keyframes glitch-anim2 {
  0% { clip: rect(70rpx, 9999rpx, 30rpx, 0); }
  20% { clip: rect(33rpx, 9999rpx, 51rpx, 0); }
  40% { clip: rect(42rpx, 9999rpx, 100rpx, 0); }
  60% { clip: rect(39rpx, 9999rpx, 97rpx, 0); }
  80% { clip: rect(10rpx, 9999rpx, 97rpx, 0); }
  100% { clip: rect(21rpx, 9999rpx, 46rpx, 0); }
}

/* 加载动画 */

.loading-pulse {
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 按钮样式 */

.btn {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 16rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary), var(--primary-light));
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(99, 102, 241, 0.3);
}

.btn-primary:hover {
  box-shadow: 0 6rpx 20rpx rgba(99, 102, 241, 0.5);
  transform: translateY(-2rpx);
}

.btn-secondary {
  background: transparent;
  color: var(--primary);
  border: 1rpx solid var(--primary);
}

.btn-secondary:hover {
  background: var(--primary);
  color: white;
  box-shadow: var(--neon-glow);
}

.btn-cta {
  background: linear-gradient(135deg, var(--cta), #10B981);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(34, 197, 94, 0.3);
}

.btn-cta:hover {
  box-shadow: 0 6rpx 20rpx rgba(34, 197, 94, 0.5);
  transform: translateY(-2rpx);
}

/* 输入框样�?*/

.input {
  background: rgba(26, 26, 46, 0.8);
  border: 1rpx solid var(--border);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  color: var(--text);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 16rpx;
  transition: all 0.3s ease;
}

.input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3rpx rgba(99, 102, 241, 0.1);
}

.input::-moz-placeholder {
  color: var(--text-secondary);
  opacity: 0.7;
}

.input::placeholder {
  color: var(--text-secondary);
  opacity: 0.7;
}

/* 卡片样式 */

.card {
  background: var(--surface);
  border-radius: 16rpx;
  border: 1rpx solid var(--border);
  padding: 20rpx;
  transition: all 0.3s ease;
}

.card:hover {
  border-color: var(--primary);
  box-shadow: var(--neon-glow);
}

/* 滚动条样�?*/

::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
}

::-webkit-scrollbar-track {
  background: var(--background);
}

::-webkit-scrollbar-thumb {
  background: var(--primary);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-light);
}

/* 响应式设�?*/

@media (max-width: 768rpx) {
  .btn {
    padding: 10rpx 20rpx;
    font-size: 14rpx;
  }
  
  .card {
    padding: 16rpx;
  }
  
  .input {
    padding: 10rpx 14rpx;
  }
}

